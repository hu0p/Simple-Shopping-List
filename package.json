{
  "name": "simple-shopping-list",
  "version": "1.0.0",
  "description": "MERN stack shopping list",
  "main": "server.js",
  "scripts": {
    "full-install": "concurrently \"npm run server-install\" \"npm run client-install\"",
    "client-install": "npm install --prefix client",
    "server-install": "npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hu0p/Simple-Shopping-List.git"
  },
  "author": "Logan Houp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hu0p/Simple-Shopping-List/issues"
  },
  "homepage": "https://github.com/hu0p/Simple-Shopping-List#readme",
  "dependencies": {
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "mongoose": "^5.2.3"
  },
  "devDependencies": {
    "nodemon": "^1.18.2"
  }
}
